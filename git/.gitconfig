[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[user]
	name = Koichi Miyamoto
	email = m5813k@gmail.com
[color]
	ui = auto
[init]
    templatedir = ~/dotfiles/.git_template
[core]
	editor = vim
    excludesfile = ~/.gitignore_global
	quotepath = false
[alias]
	graph     = log --graph --branches --tags --date-order -n 20 --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
	gr        = log --graph --branches --tags              -n 20 --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
	graph1    = log --graph --date-order -n 20 --pretty=format:'%Cgreen%cr%x09%Cred%d%Creset%s%x09%Cblue(%cn)' --date=short
	graph2    = log --graph --decorate --oneline -n 20
	graph-all = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
	co        = checkout
    s         = status
	st        = status
	b         = branch
	c         = commit -v
    l         = log --oneline --graph --branches
    aliass    = !git config --get-regexp alias
    unstage   = reset HEAD --
    branches  = branch -a
    tags      = tag -a
    amend     = commit --amend
    br        = !git checkout $(git branch | fzf)
	undo = "!f() { \\\n    git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; \\\n}; f"
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
